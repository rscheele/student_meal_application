@model Domain.Student

@{
    ViewBag.Title = "StepTwo";
}

<body>
    <h2>Registratie - Stap 2</h2>
    <p>Voer je gebruikersgegevens in om je registratie compleet te maken</p>
    @using (Html.BeginForm("StepTwo", "AccountStudent", FormMethod.Post))
    {
        <div class="form-group">
            Email: <br />
            @Html.DisplayFor(x => User.Identity.Name, new { @class = "formcontrol" })
        </div>
        <div class="form-group">
            Naam: <br />
            @Html.TextBoxFor(x => Model.Name, new { @class = "formcontrol" })
        </div>
        <div class="form-group">
            Telefoonnummer: <br />
            @Html.TextAreaFor(x => Model.Phone, new { @class = "formcontrol" })
        </div>
        <br />
        <input class="btn btn-danger" type="submit" value="Versturen!" />
    }
</body>


